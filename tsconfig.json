{
  "compilerOptions": {
    "target": "esnext", // Change from "es5" to "esnext" for better compatibility with Vite
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "jest", "@testing-library/jest-dom"] // Add "vite/client" to improve TypeScript integration with Vite
  },
  "include": [
    "src"
  ]
}
